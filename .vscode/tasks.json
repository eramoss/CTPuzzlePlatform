// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run local Docker image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "rm -rf backend/dist && docker-compose down && docker-compose --file docker-compose.prod.local.yml up --build",
            "problemMatcher": []
        },
        {
            "label": "Update online version aftet success CI/CD build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "./updatePlatform.sh",
            "problemMatcher": []
        },
        {
            "label": "Run local Docker image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "docker-compose down && docker-compose --file docker-compose.prod.local.yml up",
            "problemMatcher": []
        },
        {
            "label": "Generate TypeORM migrations from changed TS Entities",
            "type": "shell",
            "command": "rm -rf dist/migration/* && npx typeorm -f ormconfig.json migration:generate -n AutoGeneratedMigration",
            "options": {
                "cwd": "${workspaceFolder}/backend",
            },
            "problemMatcher": []
        },
        {
            "label": "Run TypeORM migrations",
            "type": "shell",
            "command": "npx typeorm migration:run --config ormconfig.json",
            "options": {
                "cwd": "${workspaceFolder}/backend",
            },
            "problemMatcher": []
        },
        {
            "label": "Revert TypeORM migrations",
            "type": "shell",
            "command": "npx typeorm migration:revert --config ormconfig.json",
            "options": {
                "cwd": "${workspaceFolder}/backend",
            },
            "problemMatcher": []
        },
        {
            "label": "npm install frontend",
            "type": "shell",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": []
        },
        {
            "label": "npm install backend",
            "type": "shell",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": []
        },
        {
            "label": "Install docs generator",
            "type": "shell",
            "command": "npm i docsify-cli -g",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Tasks",
            "type": "shell",
            "command": "${input:terminateAllTasks}",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminateAllTasks",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}